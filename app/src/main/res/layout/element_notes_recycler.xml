<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:maxLines="1"
        android:text="@string/example_note_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/noteTitleText"
        android:textStyle="bold"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/tv_note_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:maxLines="2"
        android:textSize="@dimen/noteBodyText"
        android:text="@string/example_note_body" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_note_date"
        android:gravity="end"
        android:textSize="@dimen/noteCreatedDate"
        android:textColor="@color/colorAccent"
        android:text="@string/example_note_time" />
    </LinearLayout>
</androidx.cardview.widget.CardView>