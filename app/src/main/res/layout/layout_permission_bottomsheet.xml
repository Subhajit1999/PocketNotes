<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/background_bottomsheet_round_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottomsheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow permissions"
        android:textColor="@android:color/holo_red_light"
        android:textSize="28sp"
        app:fontFamily="@font/archivo_black" />

    <TextView
        android:id="@+id/tv_bottomsheet_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="?attr/contentColor"
        android:text="@string/allow_permission_bottomsheet" />
    <TextView
        android:id="@+id/tv_bottomsheet_highlight_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/permissions"
        android:textColor="?attr/titleColor"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/bt_bottomsheet"
        android:text="@string/bottomSheet_button_go"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:shadowColor="@android:color/black"/>
</LinearLayout>