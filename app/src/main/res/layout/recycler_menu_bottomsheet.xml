<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bottomsheet"
        android:text="Choose option:"
        android:textSize="16sp"
        android:textColor="?attr/contentColor"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/bottomsheet_archive">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_bottomsheet_archive"
            android:layout_margin="16dp"
            android:src="@drawable/ic_archive" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:id="@+id/tv_bottomsheet_archive"
            android:textColor="?attr/titleColor"
            android:text="Archive"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/bottomsheet_delete">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_bottomsheet_delete"
            android:src="@drawable/ic_delete"
            android:layout_margin="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bottomsheet_delete"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Delete note"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/bottomsheet_save">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_bottomsheet_save"
            android:layout_margin="16dp"
            android:src="@drawable/ic_file" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:id="@+id/tv_bottomsheet_save"
            android:textColor="?attr/titleColor"
            android:text="Save as text file"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/bottomsheet_share">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_bottomsheet_share"
            android:src="@drawable/ic_share"
            android:layout_margin="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bottomsheet_share"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:textColor="?attr/titleColor"
            android:text="Share a copy"/>
    </LinearLayout>
